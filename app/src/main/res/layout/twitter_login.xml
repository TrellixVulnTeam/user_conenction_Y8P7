<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_gravity="center"
    android:background="@android:color/transparent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/share_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/onezero"
        
        android:background="@drawable/twitter_bg"
        android:orientation="vertical"
        android:visibility="visible" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/fourzero"
            android:layout_margin="@dimen/two"
            android:background="@drawable/twitter_header_bg" >

            <TextView
                android:id="@+id/btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/five"
                android:gravity="center"
                android:padding="@dimen/five"
                android:text="Cancel"
                android:textColor="#fff"
                android:textSize="@dimen/onefive" />

            <TextView
                android:id="@+id/title"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/five"
                android:layout_marginRight="@dimen/five"
                android:layout_toLeftOf="@+id/btn_share"
                android:layout_toRightOf="@+id/btn_cancel"
                android:gravity="center"
                android:paddingTop="@dimen/five"
                android:text="Tweet"
                android:textColor="@color/white"
                android:textSize="@dimen/onefive"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/btn_share"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/five"
                android:gravity="center"
                android:padding="@dimen/five"
                android:text="Share"
                android:textColor="#fff"
                android:textSize="@dimen/onefive" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/onezero"
            android:background="#cceaf3" >

            <ImageView
                android:id="@+id/icon"
                android:layout_width="@dimen/fivezero"
                android:layout_height="@dimen/fivezero"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_launcher" />

            <TextView
                android:id="@+id/user_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@+id/icon"
                android:gravity="center_vertical"
                android:padding="@dimen/onezero"
                android:text="vishal"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#000000"
                android:textSize="@dimen/onefive" />
        </RelativeLayout>

        <TextView
            android:id="@+id/share_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/five"
            android:layout_marginRight="@dimen/five"
            android:padding="@dimen/five"
            android:textColor="#000000"
            android:textSize="@dimen/onefive" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/twozerozero"
            android:layout_margin="@dimen/five"
            android:scaleType="fitXY"
            android:src="@drawable/ic_launcher"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>